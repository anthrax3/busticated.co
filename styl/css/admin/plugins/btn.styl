.btn
  position relative
  display inline-block
  font bold 10px/10px arial
  letter-spacing 2px
  text-transform uppercase
  text-decoration none
  color #fff
  border 1px solid #fff
  cursor pointer
  padding 10px
  outline none
  text-align center
  background #000
  background -moz-linear-gradient(top, #777 0%, #000 100%)
  background -webkit-linear-gradient(top, #777 0%, #000 100%)
  background-clip padding-box
  border-radius 5px
  text-shadow -1px -1px 0 rgba(0, 0, 0, 0.9)
  transition background 0.2s ease

.btn:hover,
.btn:focus
  color #fff
  background #333
  background -moz-linear-gradient(top, #777 0%, #333 100%)
  background -webkit-linear-gradient(top, #777 0%, #333 100%)
  background-clip padding-box
  text-decoration none
  text-shadow -1px -1px 0 rgba(0, 0, 0, 0.9)
  outline none

.btn:active
  color #fff
  background #333
  background -moz-linear-gradient(top, #333 0%, #555 100%)
  background -webkit-linear-gradient(top, #333 0%, #555 100%)
  background-clip padding-box
  text-decoration none
  top 1px
  outline none
  box-shadow inset 1px 1px 5px rgba(0,0,0,0.5)

.btn.small
  padding 5px 5px 5px 7px
  margin 0 5px 0 0
  vertical-align 1px
