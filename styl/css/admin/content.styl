/* fonts ////////////////////////////////////////////////*/
body
  font-family sans-serif

/* icons ////////////////////////////////////////////////*/
.icon
  cursor pointer
  display inline-block
  font normal normal normal 22px/1 Pictos
  text-rendering:geometricPrecision
  /* auto | optimizeSpeed | optimizeLegibility | geometricPrecision | inherit */
  position relative
  text-transform none
  text-decoration none
  padding 0
  margin: 0
  z-index 1

.icon:focus,
.icon:hover
  color #a1a1a1

.icon:active
  top 1px
